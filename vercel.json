{
    "version": 2,
    "builds": [
        {
            "src": "/api/index.php",
            "use": "vercel-php@0.6.0"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/(css|js|images|fonts|favicon.ico|robots.txt)",
            "dest": "/public/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/api/index.php"
        }
    ],
    "env": {
        "APP_NAME": "Laravel",
        "APP_ENV": "production",
        "APP_DEBUG": "false",
        "APP_URL": "https://your-project.vercel.app",

        "DB_CONNECTION": "mysql",
        "DB_HOST": "mysql-laravel-chat-laravel-chat.f.aivencloud.com",
        "DB_PORT": "24932",
        "DB_DATABASE": "defaultdb",
        "DB_USERNAME": "avnadmin"
    }
}
